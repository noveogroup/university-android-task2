<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="@dimen/skills_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textAppearance="@android:style/TextAppearance.Medium"/>
    <TextView
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignParentRight="true" />
    <TextView
            android:id="@+id/skills_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_below="@+id/surname"/>
    <Button
            android:id="@+id/skills_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skills_view"
            android:text="@string/edit"
            android:drawableLeft="@drawable/ic_action_edit"/>
    <EditText
            android:id="@+id/skills_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surname"
            android:visibility="gone"
            android:hint="@string/skills_edit_hint"/>
    <Button
            android:id="@+id/skills_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skills_edit"
            android:visibility="gone"
            android:text="@string/save"
            android:drawableLeft="@drawable/ic_action_accept"/>
</RelativeLayout>